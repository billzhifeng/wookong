ALTER TABLE warehouse_sku_stock ADD COLUMN updated_time DATETIME NOT NULL COMMENT '更新时间';
ALTER TABLE warehouse_sku_stock ADD COLUMN deleted CHAR(1) DEFAULT 'N' NOT NULL COMMENT 'N有效，Y被删除';

  